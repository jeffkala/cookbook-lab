          "autonomous-system": {{ bgp['asn'] }},
          "router-id": "{{ interfaces['system0']['ip_address'] | split('/') | first }}",
          "afi-safi": [
            {
              "afi-safi-name": "ipv4-unicast",
              "admin-state": "enable"
            }
          ],
          "group": [
{% for group_name, peer_group_peers in bgp['peer_groups'].items() %}
            {%     if 'overlay' in group_name %}
            {
              "group-name": "{{ group_name }}",
              "peer-as": 100,
              "export-policy": [
                "all"
              ],
              "import-policy": [
                "all"
              ],
              "afi-safi": [
                {
                  "afi-safi-name": "evpn",
                  "admin-state": "enable"
                },
                {
                  "afi-safi-name": "ipv4-unicast",
                  "admin-state": "disable"
                }
              ],
              "local-as": {
                "as-number": 100
              },
              "timers": {
                "minimum-advertisement-interval": 1
              }
            },
            {% else %}
            {
              "group-name": "{{ group_name }}",
              "peer-as": {{ bgp['peer_groups']['underlay'][0]['remote_as'] }},
              "export-policy": [
                "all"
              ],
              "import-policy": [
                "all"
              ]
            }{{ "," if not loop.last else "" }}
            {% endif %}
          {% endfor %}
          ],
          "neighbor": [
  {% for group_name, peer_group_peers in bgp['peer_groups'].items() %}
   {% for bgp_peer in peer_group_peers %}
            {
              "peer-address": "{{ bgp_peer['ip_address'] }}",
              "peer-group": "{{ group_name }}"
            },
   {% endfor %}
  {% endfor %}
          ]
